generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id            Int           @id @default(autoincrement())
  name          String
  plannedBudget Float?
  expenses      Expense[]
  participants  Participant[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Expense {
  id        Int      @id @default(autoincrement())
  amount    Float
  currency  String
  category  Category
  tripId    Int
  trip      Trip     @relation(fields: [tripId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Category {
  FOOD
  TRANSPORT
  ACCOMMODATION
  ENTERTAINMENT
  OTHER
}

enum Role {
  USER
  ADMIN
}

model Participant {
  id          Int      @id @default(autoincrement())
  email       String
  User        User     @relation(fields: [email], references: [email])
  amountToPay Float
  tripId      Int
  trip        Trip     @relation(fields: [tripId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  email       String        @id
  aboutMe     String?
  password    String
  role        Role
  isEnabled   Boolean
  name        String?
  Participant Participant[]
}
