generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id            Int        @id @default(autoincrement())
  name          String
  plannedBudget Float?
  expenses      Expense[]
  participants  Participant[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Expense {
  id         Int      @id @default(autoincrement())
  amount     Float
  currency   String
  category   Category
  tripId     Int
  trip       Trip     @relation(fields: [tripId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Category {
  FOOD
  TRANSPORT
  ACCOMMODATION
  ENTERTAINMENT
  OTHER
}

model Participant {
  id          Int    @id @default(autoincrement())
  email       String
  name        String?
  amountToPay Float
  tripId      Int
  trip        Trip   @relation(fields: [tripId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
